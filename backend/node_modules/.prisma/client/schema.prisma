datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  email     String   @unique
  createdAt DateTime @default(now())
  news      News[]
}

model News {
  id          Int      @id @default(autoincrement())
  image       String?
  title       String
  description String   @db.Text
  type        NewsType
  view        Int      @default(0)
  createdAt   DateTime @default(now())
  authorId    Int
  author      User     @relation(fields: [authorId], references: [id])
}

enum NewsType {
  Food
  Lifestyle
  Geek_Development
  Startup
  IT_Gadget
  Art_Design
  Work_Life_Health
  Project
  Articles
  Journey
  Movies_Series_Songs
  Diary
}

model Setting {
  id          Int      @id @default(autoincrement())
  facebookUrl String   @default("https://www.facebook.com/nuuneoicom")
  updatedAt   DateTime @updatedAt
}
